-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
local frame = Instance.new("Frame")
local startButton = Instance.new("TextButton")
local stopButton = Instance.new("TextButton")

-- Properties for the GUI Frame
frame.Size = UDim2.new(0.25, 0, 0.25, 0)
frame.Position = UDim2.new(0.5, -125, 0.5, -125)
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
frame.Parent = screenGui

-- Properties for the Start Button
startButton.Size = UDim2.new(1, 0, 0.4, 0)
startButton.Position = UDim2.new(0, 0, 0, 0)
startButton.Text = "Start Auto-Farm"
startButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
startButton.Parent = frame

-- Properties for the Stop Button
stopButton.Size = UDim2.new(1, 0, 0.4, 0)
stopButton.Position = UDim2.new(0, 0, 0.5, 0)
stopButton.Text = "Stop Auto-Farm"
stopButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
stopButton.Parent = frame

-- Variables to control the farming process
local farming = false

-- Function to collect resources
local function collectResources()
    while farming do
        wait(1)  -- Adjust the wait time as needed
        local resources = game.Workspace.Resources:GetChildren()  -- Adjust path as needed
        for _, resource in pairs(resources) do
            if resource:IsA("Collectible") then
                resource:Collect()  -- Replace with actual collection function
            end
        end
    end
end

-- Function to start farming
local function startFarming()
    farming = true
    collectResources()
end

-- Function to stop farming
local function stopFarming()
    farming = false
end

-- Connect buttons to functions
startButton.MouseButton1Click:Connect(startFarming)
stopButton.MouseButton1Click:Connect(stopFarming)

-- Parent the GUI to the Player's PlayerGui
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
